<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="3.1">

    <listener>
        <listener-class>init.AppContextListener</listener-class>
    </listener>

    <!-- Start of ilters/AuthenticationFilter -->
    <filter>
        <filter-name>authenticationfilter</filter-name>
        <filter-class>filters.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authenticationfilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- End of ilters/AuthenticationFilter -->

    <!-- Start of ilters/AuthenticationFilter -->
    <filter>
        <filter-name>fileAccessFilter</filter-name>
        <filter-class>filters.FileAccessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>fileAccessFilter</filter-name>
        <url-pattern>Files/*</url-pattern>
    </filter-mapping>
    <!-- End of ilters/AuthenticationFilter -->

    <!-- Start of ervlets/LoginServlet -->
    <servlet>
        <servlet-name>loginservlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginservlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <!-- End of ervlets/LoginServlet -->

    <!-- Start of ervlets/UserDataServlet -->
    <servlet>
        <servlet-name>userdataservlet</servlet-name>
        <servlet-class>servlets.UserDataServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userdataservlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <!-- End of ervlets/UserDataServlet -->

    <!-- Start of ervlets/FileViewServlet -->
    <servlet>
        <servlet-name>fileviewservlet</servlet-name>
        <servlet-class>servlets.FileViewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>fileviewservlet</servlet-name>
        <url-pattern>/file-view</url-pattern>
    </servlet-mapping>
    <!-- End of ervlets/FileViewServlet -->

    <!-- Start of ervlets/ChunkUploadServlet -->
    <servlet>
        <servlet-name>chunkuploadservlet</servlet-name>
        <servlet-class>servlets.ChunkUploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>chunkuploadservlet</servlet-name>
        <url-pattern>/chunked-upload</url-pattern>
    </servlet-mapping>
    <!-- End of ervlets/ChunkUploadServlet -->

    <!-- Start of ervlets/FileUploadStatus -->
    <servlet>
        <servlet-name>fileuploadstatus</servlet-name>
        <servlet-class>servlets.FileUploadStatus</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>fileuploadstatus</servlet-name>
        <url-pattern>/upload-status</url-pattern>
    </servlet-mapping>
    <!-- End of ervlets/FileUploadStatus -->

    <!-- Start of ervlets/FileOperations -->
    <servlet>
        <servlet-name>fileoperations</servlet-name>
        <servlet-class>servlets.FileOperationsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>fileoperations</servlet-name>
        <url-pattern>/file-operations</url-pattern>
    </servlet-mapping>
    <!-- End of ervlets/FileOperations -->

    <!-- Start of ervlets/OperationsStatusServlet -->
    <servlet>
        <servlet-name>operationsstatusservlet</servlet-name>
        <servlet-class>servlets.OperationsStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>operationsstatusservlet</servlet-name>
        <url-pattern>/operations-status</url-pattern>
    </servlet-mapping>
    <!-- End of ervlets/OperationsStatusServlet -->
</web-app>
